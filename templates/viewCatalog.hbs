<section id="viewCatalog" class="background-img">
    <a href="#/add-flight" class="add-flight">Add Flight +</a>

    <div class="added-flights">
        {{#each flights}}
        <a href="#/details/{{this._id}}" class="added-flight">
            <img src="{{this.image}}" alt="" class="picture-added-flight">
            <h3>{{this.destination}}</h3>
            <span>from {{this.origin}}</span><span>{{this.departureDate}}</span>
        </a>
        {{/each}}
    </div>
</section>