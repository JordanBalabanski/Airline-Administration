{{> header}}

<section id="viewFlightDetails">
    <div class="ticket-area">
        <div class="ticket-area-left">
            <img src="{{image}}" alt="">
        </div>
        <div class="ticket-area-right">
            <h3>{{destination}}</h3>
            <div>from {{origin}}</div>
            <div class="data-and-time">
                {{departureDate}} {{departureTime}}
                {{#if creator}}
                <a href="#/edit/{{id}}" class="edit-flight-detail"></a>
                {{/if}}
            </div>
            <div>
                {{seats}} Seats ({{costPerSeat}} per seat)
            </div>
        </div>
    </div>
</section>

{{> footer}}